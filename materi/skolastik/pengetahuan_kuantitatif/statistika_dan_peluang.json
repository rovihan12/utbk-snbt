{
  "judul": "Statistika dan Peluang",
  "items": [
    {
      "judul": "Materi Statistika",
      "subItems": [
        {
          "teks": "Statistika adalah ilmu yang mempelajari cara mengumpulkan, mengolah, menganalisis, dan menyajikan data."
        },
        {
          "judul": "1. Penyajian Data",
          "subItems": [
            { "teks": "Tabel: Data disusun dalam baris dan kolom." },
            {
              "teks": "Diagram/Grafik",
              "subItems": [
                { "teks": "Diagram Batang: Untuk membandingkan data antar kategori." },
                { "teks": "Diagram Garis: Untuk menunjukkan tren atau perubahan data seiring waktu." },
                { "teks": "Diagram Lingkaran (Pie Chart): Untuk menunjukkan proporsi bagian terhadap keseluruhan." },
                { "teks": "Histogram: Mirip diagram batang, tetapi untuk data kelompok (interval). Batang-batangnya saling berimpit." },
                { "teks": "Poligon Frekuensi: Garis yang menghubungkan titik tengah atas setiap batang histogram." }
              ]
            }
          ]
        },
        {
          "judul": "2. Ukuran Pemusatan Data",
          "subItems": [
            {
              "teks": "Mean (Rata-rata Hitung)",
              "subItems": [
                { "teks": "Data Tunggal: x̄ = ∑xᵢ / n" },
                { "teks": "Data Berbobot/Frekuensi: x̄ = ∑(fᵢ·xᵢ) / ∑fᵢ" },
                { "teks": "Data Kelompok: x̄ = ∑(fᵢ·mᵢ) / ∑fᵢ, dengan mᵢ adalah titik tengah kelas interval." }
              ]
            },
            {
              "teks": "Median (Nilai Tengah)",
              "subItems": [
                { "teks": "Data Ganjil: Median adalah suku tengah." },
                { "teks": "Data Genap: Median adalah rata-rata dua suku tengah." },
                { "teks": "Data Kelompok: Median = L + ((n/2 - F) / f) × c" }
              ]
            },
            {
              "teks": "Modus (Nilai yang Sering Muncul)",
              "subItems": [
                { "teks": "Bisa lebih dari satu modus (bimodal, multimodal) atau tidak ada modus." },
                { "teks": "Data Kelompok: Modus = L + (d₁ / (d₁ + d₂)) × c" }
              ]
            }
          ]
        },
        {
          "judul": "3. Ukuran Letak Data (Kuantil)",
          "subItems": [
            {
              "teks": "Kuartil (Q)",
              "subItems": [
                { "teks": "Q₁, Q₂ (Median), Q₃: Membagi data menjadi 4 bagian." },
                { "teks": "Data Kelompok: Qₖ = L + ((k·n/4 - F) / f) × c" }
              ]
            },
            { "teks": "Desil (D): Dₖ = L + ((k·n/10 - F) / f) × c" },
            { "teks": "Persentil (P): Pₖ = L + ((k·n/100 - F) / f) × c" }
          ]
        },
        {
          "judul": "4. Ukuran Penyebaran Data",
          "subItems": [
            { "teks": "Jangkauan: Xmax − Xmin" },
            { "teks": "Jangkauan Interkuartil: Q₃ − Q₁" },
            { "teks": "Simpangan Kuartil: (Q₃ − Q₁)/2" },
            { "teks": "Simpangan Rata-rata: SR = ∑|xᵢ − x̄| / n" },
            {
              "teks": "Variansi (Ragam)",
              "subItems": [
                { "teks": "s² = ∑(xᵢ − x̄)² / n" },
                { "teks": "Atau: s² = ∑xᵢ² / n − (x̄)²" }
              ]
            },
            { "teks": "Simpangan Baku (Standar Deviasi): s = √(Variansi)" }
          ]
        },
        {
          "teks": "Tips Belajar Statistika",
          "subItems": [
            { "teks": "Pahami konsep, bukan hanya rumus." },
            { "teks": "Latih soal data tunggal dan kelompok." },
            { "teks": "Gunakan sketsa/gambar untuk membantu." },
            { "teks": "Teliti dalam perhitungan." },
            { "teks": "Perhatikan pertanyaan: mean, median, modus, atau penyebaran?" }
          ]
        }
      ]
    },
    {
      "teks": "Materi Peluang (Probabilitas)",
      "subItems": [
        {
          "judul": "1. Konsep Dasar Peluang",
          "subItems": [
            { "teks": "Ruang Sampel (S): Himpunan semua hasil yang mungkin." },
            { "teks": "Titik Sampel: Anggota ruang sampel." },
            { "teks": "Kejadian (E): Himpunan bagian dari ruang sampel." },
            { "teks": "Peluang Kejadian: P(E) = n(E) / n(S)" },
            { "teks": "Nilai Peluang: 0 ≤ P(E) ≤ 1" },
            { "teks": "Frekuensi Harapan: Fₕ(E) = P(E) × N" }
          ]
        },
        {
          "judul": "2. Kaidah Pencacahan",
          "subItems": [
            { "teks": "Aturan Perkalian: n₁ × n₂ × ... × nₖ" },
            { "teks": "Faktorial: n! = n × (n−1) × ... × 1, dengan 0! = 1" },
            { "teks": "Permutasi: P(n,r) = n! / (n−r)!" },
            { "teks": "Permutasi Unsur Sama: n! / (n₁! n₂! ...)" },
            { "teks": "Permutasi Siklis: (n−1)!" },
            { "teks": "Kombinasi: C(n,r) = n! / [r!(n−r)!]" }
          ]
        },
        {
          "judul": "3. Kejadian Majemuk",
          "subItems": [
            { "teks": "Komplemen: P(Eᶜ) = 1 − P(E)" },
            { "teks": "Gabungan (A ∪ B): P(A) + P(B) − P(A ∩ B)" },
            { "teks": "Jika saling lepas: P(A ∪ B) = P(A) + P(B)" },
            { "teks": "Irisan (A ∩ B) dan Kejadian Saling Bebas: P(A ∩ B) = P(A) × P(B)" },
            { "teks": "Kejadian Bersyarat: P(A ∩ B) = P(A) × P(B|A)" }
          ]
        },
        {
          "judul": "Tips Belajar Peluang",
          "subItems": [
            { "teks": "Bedakan Permutasi dan Kombinasi." },
            { "teks": "Identifikasi ruang sampel dan kejadian." },
            { "teks": "Gunakan diagram pohon untuk visualisasi." },
            { "teks": "Pahami 'saling lepas' vs 'saling bebas'." },
            { "teks": "Latih soal cerita." }
          ]
        }
      ]
    },
    {
      "judul": "Strategi Umum untuk UTBK",
      "subItems": [
        { "teks": "Baca soal dengan cermat." },
        { "teks": "Identifikasi jenis data atau kejadian." },
        { "teks": "Tuliskan rumus yang sesuai." },
        { "teks": "Latih perhitungan dengan teliti." },
        { "teks": "Gunakan logika jika memungkinkan." }
      ]
    }
  ]
}
